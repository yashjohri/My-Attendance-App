<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditAdminActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbSettings"
            app:title="Settings"
            android:background="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_margin="15dp"
            android:background="@color/primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnChooseImage"
                android:src="@drawable/ic_account_pic"
                android:onClick="openChooser"
                android:layout_margin="5dp"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

        </LinearLayout>

        <LinearLayout
            android:scrollbars="vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/etName"
                android:inputType="text"
                android:textSize="15sp"
                android:textColor="@color/primary_text"
                android:hint="Name"
                android:textColorHint="@color/secondary_text"
                android:textColorHighlight="@color/secondary_text"
                android:backgroundTint="@color/primary_dark"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etOccupation"
                android:inputType="text"
                android:textSize="15sp"
                android:textColor="@color/primary_text"
                android:hint="Occupation"
                android:textColorHint="@color/secondary_text"
                android:textColorHighlight="@color/secondary_text"
                android:backgroundTint="@color/primary_dark"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etEmail"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:textColor="@color/primary_text"
                android:hint="Email"
                android:textColorHint="@color/secondary_text"
                android:textColorHighlight="@color/secondary_text"
                android:backgroundTint="@color/primary_dark"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etPassword"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:textColor="@color/primary_text"
                android:hint="Password"
                android:textColorHint="@color/secondary_text"
                android:textColorHighlight="@color/secondary_text"
                android:backgroundTint="@color/primary_dark"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnSave"
                android:background="@color/primary"
                android:textSize="15sp"
                android:text="Save"
                android:onClick="btnClicked"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etOrg"
                android:inputType="text"
                android:textSize="15sp"
                android:textColor="@color/primary_text"
                android:hint="College name"
                android:textColorHint="@color/secondary_text"
                android:textColorHighlight="@color/secondary_text"
                android:backgroundTint="@color/primary_dark"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etOrgID"
                android:inputType="text|number"
                android:textSize="15sp"
                android:textColor="@color/primary_text"
                android:hint="College ID"
                android:textColorHint="@color/secondary_text"
                android:textColorHighlight="@color/secondary_text"
                android:backgroundTint="@color/primary_dark"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnResetID"
                android:background="@color/primary"
                android:textSize="15sp"
                android:text="Reset"
                android:onClick="btnClicked"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>


</ScrollView>