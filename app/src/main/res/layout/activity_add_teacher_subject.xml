<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTeacherSubjectActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbAdminAddTeacherSubject"
        app:title="Assign Subjects"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvAssignTeacherDetails"
        android:textSize="15sp"
        android:textColor="@color/primary_text"
        android:gravity="center"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/sp_assign_sem"
        android:backgroundTint="@color/primary_dark"
        android:dropDownWidth="match_parent"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/sp_assign_batch"
        android:backgroundTint="@color/primary_dark"
        android:dropDownWidth="match_parent"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/sp_assign_subject"
        android:backgroundTint="@color/primary_dark"
        android:dropDownWidth="match_parent"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnAssign"
        android:background="@color/primary"
        android:textSize="15sp"
        android:text="ASSIGN SUBJECT"
        android:onClick="btnClicked"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>